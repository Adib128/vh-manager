datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  phoneNumber Int    @unique
  address     String
}

model Vehicle {
  id                 Int      @id @default(autoincrement())
  registrationNumber String
  make               String
  model              String
  type               String
  consumptionType    String
  fuelType           String
  transmission       String
  purchaseDate       DateTime
  Fuel               Fuel[]
}

model Driver {
  id                 Int      @id @default(autoincrement())
  registrationNumber String
  name               String
  email              String
  phoneNumber        Int
  licenseNo          Int
  expDate            DateTime
  Fuel               Fuel[]
}

model Fuel {
  id            Int      @id @default(autoincrement())
  quantity      Int
  price         Decimal
  odometerValue Int
  fillDate      DateTime
  vehicle       Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId     Int
  driver        Driver   @relation(fields: [driverId], references: [id])
  driverId      Int
}
