datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  phoneNumber Int    @unique
  address     String
}

model Vehicle {
  id                 Int      @id @default(autoincrement())
  registrationNumber String
  make               String
  model              String
  type               String
  consumptionType    String
  fuelType           String
  transmission       String
  purchaseDate       DateTime
}

model Driver {
  id                 Int      @id @default(autoincrement())
  registrationNumber String
  name               String
  email              String
  phoneNumber        Int
  licenseNo          Int
  expDate            DateTime
}
