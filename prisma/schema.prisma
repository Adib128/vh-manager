datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  phoneNumber Int       @unique
  address     String
  Booking     Booking[]
}

model Vehicle {
  id                 Int       @id @default(autoincrement())
  registrationNumber String
  make               String
  model              String
  type               String
  consumptionType    String
  fuelType           String
  transmission       String
  purchaseDate       DateTime
  Fuel               Fuel[]
  Expense            Expense[]
  Booking            Booking[]
}

model Driver {
  id                 Int       @id @default(autoincrement())
  registrationNumber String
  name               String
  email              String
  phoneNumber        Int
  licenseNo          Int
  expDate            DateTime
  Fuel               Fuel[]
  Booking            Booking[]
}

model Fuel {
  id            Int      @id @default(autoincrement())
  quantity      Int
  price         Decimal
  odometerValue Int
  fillDate      DateTime
  vehicle       Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId     Int
  driver        Driver   @relation(fields: [driverId], references: [id])
  driverId      Int
}

model Expense {
  id          Int      @id @default(autoincrement())
  expenseDate DateTime
  expenseType String
  amount      Decimal
  description String
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId   Int
}

model Booking {
  id          Int      @id @default(autoincrement())
  bookingDate DateTime
  fromAddress String
  toAddress   String
  distance    Int
  amount      Decimal
  customer    Customer @relation(fields: [customerId], references: [id])
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  driver      Driver   @relation(fields: [driverId], references: [id])
  customerId  Int
  vehicleId   Int
  driverId    Int
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
}
